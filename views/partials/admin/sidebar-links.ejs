<script>
    document.addEventListener("DOMContentLoaded", function () {
        const path = window.location.pathname;

        const sidebarLinks = {
            "/admin/dashboard": "admin-dashboard-link",
            "/admin/manage-users": "admin-manage-users-link",
            "/admin/manage-listings": "admin-manage-listings-link",
            "/admin/transactions": "admin-transactions-link",
        };

        const activeLinkId = sidebarLinks[path];
        if (activeLinkId) {
            document.getElementById(activeLinkId).classList.add("active");
        }
    });
</script>