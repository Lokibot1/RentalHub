<div class="sidebar">
    <ul>
        <li><a id="dashboard-link" href="/user/dashboard">Dashboard</a></li>
        <li><a id="profile-link" href="/user/profile">Profile</a></li>
        <li><a id="my-requests-link" href="/user/my-requests">My Requests</a></li>
        <li><a id="my-items-link" href="/user/my-items">My Items</a></li>
        <li><a id="archives-link" href="/user/archives">Archives</a></li>
        <li><a href="/logout" id="logout">Log Out</a></li>
    </ul>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const path = window.location.pathname;

        const sidebarLinks = {
            "/user/dashboard": "dashboard-link",
            "/user/profile": "profile-link",
            "/user/my-requests": "my-requests-link",
            "/user/my-items": "my-items-link",
            "/user/archives": "archives-link"
        };

        const activeLinkId = sidebarLinks[path];
        if (activeLinkId) {
            document.getElementById(activeLinkId).classList.add("active");
        }
    });
</script>