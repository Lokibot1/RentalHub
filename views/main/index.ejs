<!-- How It Works Section -->
<section id="how-it-works">
    <h2 class="how-it-works">How RentalHub Works</h2>
    <div class="toggle-wrapper">
        <div class="toggle-container">
            <button id="renterBtn" class="toggle-btn">Renter</button>
            <button id="ownerBtn" class="toggle-btn">Owner</button>
            <div class="toggle-slider"></div>
        </div>
    </div>

    <div id="renterContent" class="content-box">
        <h3>For Renters</h3>
        <div class="content-wrapper">
            <ul>
                <li><strong>1. Browse</strong> ‚Äì Find the item you need.</li>
                <li><strong>2. Request</strong> ‚Äì Send a rental request & pay a deposit.</li>
                <li><strong>3. Use</strong> ‚Äì Enjoy the item.</li>
                <li><strong>4. Return</strong> ‚Äì Give it back & get your deposit refunded.</li>
            </ul>

            <img src="/images/magnifyingglass.png" id="renterImage" alt="For Renters" class="toggle-image">
        </div>
    </div>

    <div id="ownerContent" class="content-box" style="display: none;">
        <h3>For Owners</h3>
        <div class="content-wrapper">
            <ul>
                <li><strong>1. List</strong> ‚Äì Upload your item for rent.</li>
                <li><strong>2. Approve</strong> ‚Äì Review & accept rental requests.</li>
                <li><strong>3. Lend</strong> ‚Äì Hand over the item.</li>
                <li><strong>4. Earn</strong> ‚Äì Get paid once the item is returned safely.</li>
            </ul>
            <img src="/images/howitworksowner1.png" id="ownerImage" alt="For Owners" class="toggle-image">
        </div>
    </div>
</section>


